pkgname=mate-common
pkgver=1.2.0
pkgrel=1
pkgdesc="Common development macros for MATE"
arch=('any')
license=('GPL')
depends=()
makedepends=()
options=('!libtool')
url="http://matsusoft.com.ar/projects/mate/"
groups=('mate')
source=()
sha256sums=()

build() {
	# vamos a la carpeta arriba, dos niveles
	cd "${srcdir}/../../../"
    ./autogen.sh \
        --prefix=/usr || return 1
    make || return 1
}

package() {
    cd "${srcdir}/../../../"
    make DESTDIR="${pkgdir}" install || return 1
}
